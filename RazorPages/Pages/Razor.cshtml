@page
@{
    ViewData["title"] = "Razor";
}

@{
    // Todays date and weekday
    var dateTime = DateTime.Now;
    var today = (int)DateTime.Now.DayOfWeek;

    // Courses
    string[] courses = new string[12] { "DT057G | Webbutveckling I", "DT084G | Introduktion till programmering i JavaScript", "DT068G | Webbanvändbarhet", "DT163G | Digital bildbehandling för webb", "DT003G | Databaser", "DT093G | Webbutveckling II", "DT197G | Webbdesign för CMS", "DT173G | Webbutveckling III", "IK060G | Projektledning", "DT193G | Fullstack-utveckling med ramverk", "DT071G | Programmering i C# .NET", "DT162G | JavaScript-baserad webbutveckling" };
    List<string> allCourses = new List<string>();

    allCourses.AddRange(courses);
}

<section class="razor-section">
    <h1 class="razor-title">Razor</h1>

    <h2 class="information-title">Information</h2>

    <p><span class="bold">Datum/klockslag:</span> @dateTime</p>

    <!-- Check if today is Monday or not -->
    @if (today == 1)
    {
        <p>Idag är det måndag!</p>
    }
    else
    {
        <p>Idag är det inte måndag.</p>
    }

    <p class="bold">Kurser jag läst</p>

    <div class="courses-container">
        <ul>
            @foreach (var course in allCourses)
            {
                <li>@course</li>
            }
        </ul>
    </div>
</section>