<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,300;0,400;0,500;0,600;1,100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPagesLabb01.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var date = DateTime.Now.ToShortDateString();
    }

    <!-- Top section including logo and date -->
    <section class="top-container">
        <div class="logo-container"><span class="logo">Razor Pages</span></div>
        <div class="date"><span>Dagens datum är: @date</span></div>
    </section>

    <main>
        <div class="container">
            <!-- Navigation -->
            <div class="content-small">
                <nav class="nav">
                    <ul class="nav-list">
                        <li class="nav-item"><a asp-page="/Index">Start</a></li>
                        <li class="nav-item"><a asp-page="/Razor">Razor</a></li>
                        <li class="nav-item"><a asp-page="/About">Om sidan</a></li>
                    </ul>
                </nav>
            </div>
            <!-- Main content -->
            <div class="content-large">@RenderBody()</div>

            <!-- Footer -->
            <footer><p>Av Jenny Dinh - Kontakta mig via e-post: jedi2100@student.miun.se</p></footer>
        </div>
    </main>


    <script src="~/js/app.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>